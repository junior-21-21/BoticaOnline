@page
@model BoticaOnline.Web.Pages.Pedidos.ListadoModel
@{
    ViewData["Title"] = "Gestión de Pedidos";
}

<h1 class="display-4">@ViewData["Title"]</h1>
<hr />

<a asp-page="./Registro" class="btn btn-primary mb-3">Registrar Nuevo Pedido</a>

@if (!Model.Pedidos.Any())
{
    <div class="alert alert-info">No hay pedidos registrados en el sistema.</div>
}
else
{
    <table class="table table-striped table-hover">
        <thead class="bg-warning text-dark"> @* Usaremos color amarillo para Pedidos *@
            <tr>
                <th>ID Pedido</th>
                <th>Cliente</th>
                <th>Fecha</th>
                <th>Total</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Pedidos)
            {
                // Coloreamos la fila según el estado
                <tr class="@(item.Estado == "Cancelado" ? "table-danger" : item.Estado == "Completado" ? "table-success" : "")">
                    <td>#@item.Id</td>
                    <td>@item.Cliente.Nombre @item.Cliente.Apellido</td> @* Mostramos el nombre completo *@
                    <td>@item.FechaPedido.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>$@item.Total.ToString("N2")</td>
                    <td><span class="badge @(item.Estado == "Pendiente" ? "bg-secondary" : item.Estado == "Completado" ? "bg-success" : "bg-warning")">@item.Estado</span></td>
                    <td>
                        <a asp-page="./Detalle" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Ver Detalle</a>
                        @if (item.Estado == "Pendiente")
                        {
                            <a asp-page="./Editar" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning">Editar</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}