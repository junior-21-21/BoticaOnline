@page
@model BoticaOnline.Web.Pages.Clientes.ListadoModel
@{
    ViewData["Title"] = "Gestión de Clientes";
}

<h1 class="display-4">Clientes Registrados</h1>
<hr />

<a asp-page="./Registro" class="btn btn-primary mb-3">Registrar Nuevo Cliente</a>

@if (!Model.Clientes.Any())
{
    <div class="alert alert-info">No hay clientes registrados en el sistema.</div>
}
else
{
    <table class="table table-striped table-hover">
        <thead class="bg-info text-white">
            <tr>
                <th>Nombre Completo</th>
                <th>Email</th>
                <th>Teléfono</th>
                <th>Dirección</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Clientes)
            {
                <tr>
                    <td>@item.Nombre @item.Apellido</td>
                    <td>@item.Email</td>
                    <td>@item.Telefono</td>
                    <td>@item.Direccion</td>
                    <td>
                        <a asp-page="./Editar" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Ver/Editar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}