@page "{id:int?}" 
@model BoticaOnline.Web.Pages.Productos.EditModel
@{
    ViewData["Title"] = "Editar Producto";
}

<h1>Editar Producto: @Model.Producto.Nombre</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Producto.Id" />
            <input type="hidden" asp-for="Producto.Eliminado" /> 

            <div class="form-group mb-3">
                <label asp-for="Producto.Nombre" class="control-label"></label>
                <input asp-for="Producto.Nombre" class="form-control" />
                <span asp-validation-for="Producto.Nombre" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Producto.Categoria" class="control-label"></label>
                <input asp-for="Producto.Categoria" class="form-control" />
                <span asp-validation-for="Producto.Categoria" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Producto.Precio" class="control-label"></label>
                <input asp-for="Producto.Precio" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Producto.Precio" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Producto.Stock" class="control-label"></label>
                <input asp-for="Producto.Stock" class="form-control" type="number" />
                <span asp-validation-for="Producto.Stock" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Guardar Cambios" class="btn btn-success" />
               <a asp-page="/Index" class="btn btn-secondary">Regresar al Listado</a>
            </div>
        </form>

        <form method="post" asp-page-handler="Delete" class="mt-3" onsubmit="return confirm('¿Estás seguro de que quieres ELIMINAR LÓGICAMENTE el producto?');">
            <input type="hidden" name="id" value="@Model.Producto.Id" />
            <input type="submit" value="Eliminar Lógicamente" class="btn btn-danger" />
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}