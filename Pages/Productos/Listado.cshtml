@page
@model BoticaOnline.Web.Pages.Productos.ListadoModel
@{
    ViewData["Title"] = "Inventario de Productos";
}

<div class="text-center">
    <h1 class="display-4">Inventario de Botica Online</h1>
</div>

<a asp-page="./Create" class="btn btn-primary mb-3">Crear Nuevo Producto</a>
<hr />

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger" role="alert">
        <strong>Error:</strong> @Model.ErrorMessage
    </div>
}
else if (!Model.Productos.Any())
{
    <div class="alert alert-info">No hay productos activos en el inventario que mostrar.</div>
}
else
{
    
    <table class="table table-striped table-hover">
         <thead class="bg-success text-white"> @* <--- CAMBIADO DE bg-primary a bg-success *@
            <tr>
                <th>Nombre</th>
                <th>Categoría</th>
                <th>Precio</th>
                <th>Stock</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        <tbody>
            @foreach (var item in Model.Productos)
            {
                <tr class="@(item.Stock <= 5 ? "table-warning" : "")">
                    <td>@item.Nombre</td>
                    <td>@item.Categoria</td>
                    <td>$@item.Precio.ToString("N2")</td>
                    <td>
                        @if (item.Stock <= 5)
                        {
                            <span class="badge bg-danger">STOCK BAJO: @item.Stock</span>
                        }
                        else
                        {
                            @item.Stock
                        }
                    </td>
<td>
    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-success">Editar</a>
    
    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Eliminar</a>
</td>
                </tr>
            }
        </tbody>
    </table>
}
@* ... *@
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}