@page
@model BoticaOnline.Web.Pages.Productos.CreateModel
@{
    ViewData["Title"] = "Crear Nuevo Producto";
}

<h1>Crear Nuevo Producto</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Producto.Nombre" class="control-label"></label>
                <input asp-for="Producto.Nombre" class="form-control" />
                <span asp-validation-for="Producto.Nombre" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Producto.Categoria" class="control-label"></label>
                <input asp-for="Producto.Categoria" class="form-control" />
                <span asp-validation-for="Producto.Categoria" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Producto.Precio" class="control-label"></label>
                <input asp-for="Producto.Precio" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Producto.Precio" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Producto.Stock" class="control-label"></label>
                <input asp-for="Producto.Stock" class="form-control" type="number" />
                <span asp-validation-for="Producto.Stock" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
                <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}